{
    "name": "Slack-Webspeech",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Send Slack messages by speaking. Browser speaks received messages using TTS.",
    "homepage_url": "https://github.com/crackleware/slack-webspeech",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "options_page": "src/options/index.html",
    "page_action": {
        "default_icon": "icons/icon19.png",
        "default_title": "page action demo"
    },
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ]
}
